import os
import sys

from ibtool import *

class Main( IbToolMain ) :
    _ats_defs = {
        "AtsVer"      : "3.2.0",
        "AtsDir"      : os.path.join(os.environ["EXT_INSTALL"], "trafficserver-${AtsVer}"),
        "AtsVar"      : "${AtsDir}/var",
        "AtsLog"      : "${AtsVar}/log/trafficserver",
        "AtsLogFiles" : "${AtsLog}/*",
        "AtsEtcIn"    : "${EtcIn}/trafficserver/cur",
        "AtsEtc"      : "${Etc}/trafficserver",
        "Prog"        : "${AtsDir}/bin/traffic_server",
        "Trace"       : 'http.*|dns.*|http_hdrs|sdk|ironbee|libloader',
        "Args"        : [ '-T${Trace}', '-K' ],
        }

    def __init__( self ) :
        IbToolMain.__init__( self, "Apache Traffic Server", "Ats", self._ats_defs )
        self.Defs.Append( "PreCmds", [["make", "-C", "${AtsEtcIn}", "${MakeArgs}"]] )

main = Main( )
main.Main( )

