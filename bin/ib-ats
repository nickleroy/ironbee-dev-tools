import os
import sys
import subprocess

from ibtool import *

class Main( IbToolMain ) :
    _ats_defs = {
        "FullName"    : "Apache Traffic Server",
        "Name"        : "ATS",
        "Short"       : "ts",
        "AtsVer"      : os.environ["ATS_VERSION"],
        "AtsDir"      : os.environ["ATS_ROOT"],
        "AtsVar"      : "${AtsDir}/var",
        "AtsLogDir"   : "${AtsVar}/log/trafficserver",
        "LogDir"      : "${AtsLogDir}",
        "AtsEtcIn"    : "${EtcIn}/trafficserver/working/${AtsVer}",
        "AtsEtc"      : "${Etc}/trafficserver",
        "Prog"        : "${AtsDir}/bin/traffic_server",
        "Trace"       : 'http.*|dns.*|http_hdrs|sdk|ironbee|libloader',
        "Args"        : [ '-K', '-T${Trace}' ],
        }

    def __init__( self ) :
        IbToolMain.__init__( self, self._ats_defs )
        self.AddPrePair( 'ATS', '${AtsEtcIn}' )

    def SetupMakeArgs( self ) :
        IbToolMain.SetupMakeArgs( self )
        install = self._defs.Lookup('IbInstall')
        cmd = ['nm', os.path.join(install, 'libexec', 'ts_ironbee.so')]
        output = subprocess.check_output( cmd )
        if 'ib_ats_cmd_sock' in output :
            self._defs.Append("MakeArgs", "IB_ATS_ARGS=-s /tmp/ib-ats-cmdsock")

main = Main( )
main.Main( )

