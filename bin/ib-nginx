import os
import sys

from ibtool import *

class Main( IbToolMain ) :
    _nginx_defs = {
        "FullName"    : "Nginx",
        "Name"        : "Nginx",
        "NginxVer"    : os.environ["NGINX_VERSION"],
        "NginxDir"    : os.environ["NGINX_ROOT"],
        "NginxVar"    : "${NginxDir}/var",
        "NginxLogDir" : "${NginxVar}/log/trafficserver",
        "LogDir"      : "${NginxLogDir}",
        "NginxEtcIn"  : "${EtcIn}/nginx",
        "NginxEtc"    : "${Etc}/nginx",
        "Prog"        : "${NginxDir}/bin/nginx",
        "Args"        : [ '-c', '${NginxEtc}/nginx.conf' ],
    }

    def __init__( self ) :
        IbToolMain.__init__( self, self._nginx_defs )
        self.Defs["PreCmds"]["NGINX"] = ["make", "-C", "${NginxEtcIn}", "${MakeArgs}"]
        self.Defs["PreCmds"]["Clean"] = [ "/bin/rm", "${LogFiles}" ]

main = Main( )
main.Main( )

